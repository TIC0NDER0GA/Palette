<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Palette.Preferences">
  <ContentView.Content>
        <StackLayout>
            <Label Text="Do you have any Allergies or restrictions?"></Label>
            <Button Text="Nuts"></Button>
            <Button Text="Halal"></Button>
            <Button Text="Dairy"></Button>
            <Button Text="Pork"></Button>
            <Button Text="Beef"></Button>
            <Button Text="Chicken"></Button>
            <Button Text="Are a vegetarian"></Button>
            <Button Text="Are Vegan"></Button>
            <Button Text="Close"></Button>
            <Button Text="Far"></Button>
            <Button Text="Back" Clicked="NavigateButton_Main"></Button>
            <Button Text="Continue" Clicked="NavigateButton_Categories"></Button>
        </StackLayout>
  </ContentView.Content>
</ContentView>